    <title>@ViewData["Title"] - ExamensArbeteMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ExamensArbeteMVC.styles.css" asp-append-version="true" />
</head>
<body>

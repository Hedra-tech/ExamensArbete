@{
}

@model ContactFormModel


<div class="container">
    <h1>Contact us:</h1>
    <hr />
    <h6>
        Would you like to know more about how it works with booking our courses, the costs and more about proceed? <br />
        Write to us via the form and we will contact you shortly.
    </h6>
    <br />
    <div class="row">

        <div class="col-6">

            <div class="card  shadow" style="padding-top: 5px">
                <div class="card-body">
                    @if (ViewBag.IsSuccess == true)
                    {
                        <div class="alert alert-success" role="alert">
                            <h4 class="alert-heading">Thank you!</h4>
                            <p>We are thrilled to hear from you. We are processing your request and will return your contact as soon as possible....</p>
                            <hr>
                            <p class="mb-0"> We are very happy to have you with us. We hope you find a useful course.</p>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }

                    <form method="post" asp-action="ContactForm" asp-controller="Form">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Name">First Name:</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <label asp-for="AfterName">Last Name:</label>
                        <input asp-for="AfterName" class="form-control" />
                        <span asp-validation-for="AfterName" class="text-danger"></span>
                        <div class="form-group">

                            <label asp-for="Adress">Adress:</label>
                            <input asp-for="Adress" class="form-control" />
                            <span asp-validation-for="Adress" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Email">Email:</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">

                            <label asp-for="Message">Message:</label>
                            <textarea asp-for="Message" class="form-control"> </textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>

                        <br />
                        <br />
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary" value="Contact us">Send</button>
                        </div>


                    </form>

                </div>

            </div>

        </div>

        <div class="col-6" style="text-align:center">
            <img src="~/Images/ContactUs.jpg" class="img-fluid" width="500" height="500" />
        </div>

    </div>



</div>
